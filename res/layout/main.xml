<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/main_layout"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <fragment
    android:id="@+id/list"
    android:name="com.marakana.android.fragdemo.ZodiacListFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2" >
      <!-- Preview: layout=@android:layout/simple_list_item_1 -->
  </fragment>
  <fragment
    android:id="@+id/detail"
    android:name="com.marakana.android.fragdemo.ZodiacDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1" >
      <!-- Preview: layout=@layout/fragment_detail -->
  </fragment>
</LinearLayout>
